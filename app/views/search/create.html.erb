<% @articles.each do |article| %>
  <table>
    <thead>
      <tr>
        <th><%= article[:keyword] %></th>
      </tr>
    </thead>

    <tbody>
      <% article[:articles].each do |result| %>
        <tr>
          <td><a href="<%= result[:link] %>" target=”_blank”><%= result[:title].to_s.force_encoding("UTF-8") %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
